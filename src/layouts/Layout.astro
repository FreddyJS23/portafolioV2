---
interface Props {
  titulo: string;
  descripcion: string;
}

const { titulo, descripcion } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark dark:text-white text-black/60" data-theme="myTheme">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={descripcion} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{titulo}</title>
  </head>
  <body
    class="dark:bg-[url('../public/bg-black.svg')] bg-[url('../public/bg.svg')]"
  >
    <slot />
  </body>
</html>
